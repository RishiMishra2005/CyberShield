{
  "manifest_version": 3,
  "name": "CyberShield",
  "version": "1.0",
  "description": "AI-powered phishing detection to secure your browsing.",
  "icons": {
    "16": "icons/cybershield16.webp"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "tabs"
],
  "action": {
    "default_popup": "plugin_ui.html",
    "default_icon": {
      "16": "icons/cybershield16.webp"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js"
      ]
    }
  ]
}